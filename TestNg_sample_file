	@Test(priority=5)
	public static void AddChapter(){
		// Add Chapter
		new WebDriverWait(driver,timeout).until(ExpectedConditions. presenceOfElementLocated(By.id("menu-toggle")));
		driver.findElement(By.id("menu-toggle")).click();
		new WebDriverWait(driver,timeout).until(ExpectedConditions. presenceOfElementLocated(By.linkText("Chapters")));
		driver.findElement(By.linkText("Chapters")).click();
		System.out.println("Chapters page loaded successfully");
               
		driver.findElement(By.linkText("Add Chapter")).click();
		Thread.sleep(1000);
		
		driver.findElement(By.id("course_id")).sendKeys("Test Course German");
		driver.findElement(By.name("name_de")).sendKeys("Test Chapter German");
		driver.findElement(By.name("description_de")).sendKeys("Test Chapter Description");
		driver.findElement(By.name("name_en")).sendKeys("Test Chapter English");
		driver.findElement(By.name("description_en")).sendKeys("Test Chapter Description");
		driver.findElement(By.id("btnSubmit")).click();
		
		Assert.assertEquals("Chapter added successfully",driver.findElement(By.className("alert-title")));
		
	}
	
	
	@Test(priority=6)
	public static void AddLesson(){
		
		// Add Lesson
        new WebDriverWait(driver,timeout).until(ExpectedConditions. presenceOfElementLocated(By.id("menu-toggle")));
		driver.findElement(By.id("menu-toggle")).click();

		driver.findElement(By.linkText("Lessons / Sub Lessons")).click();
		System.out.println("Lessons page loaded successfully");
        
                
		driver.findElement(By.linkText("Add Lesson")).click();
		Thread.sleep(1000);
		
		driver.findElement(By.id("course_id")).sendKeys("Test Course German");
		driver.findElement(By.id("chapter_id")).sendKeys("Test Chapter German");
		driver.findElement(By.name("name_de")).sendKeys("Test Lesson German");
		driver.findElement(By.name("name_en")).sendKeys("Test Lesson English");
		driver.findElement(By.name("description_de")).sendKeys("Test Lesson Description");
		driver.findElement(By.id("btnSubmit")).click();
		j = addM(driver,j);
		Assert.assertEquals("Lesson added successfully",driver.findElement(By.className("alert-title")));
		
	}
	
	
	@Test(priority=7)
	public static void AddSubLesson(){
		
		// Add Sub-Lesson
        new WebDriverWait(driver,timeout).until(ExpectedConditions. presenceOfElementLocated(By.id("menu-toggle")));
		driver.findElement(By.id("menu-toggle")).click();
		new WebDriverWait(driver,timeout).until(ExpectedConditions. presenceOfElementLocated(By.linkText("Lessons / Sub Lessons")));
		driver.findElement(By.linkText("Lessons / Sub Lessons")).click();
		System.out.println("Lessons page loaded successfully");
           
		driver.findElement(By.linkText("Add Lesson")).click();
		Thread.sleep(1000);
		
		driver.findElement(By.id("course_id")).sendKeys("Test Course German");
		driver.findElement(By.id("chapter_id")).sendKeys("Test Chapter German");
		driver.findElement(By.id("lesson_id")).sendKeys("Test Lesson German");
		driver.findElement(By.name("name_de")).sendKeys("Test Sub-Lesson German");
		driver.findElement(By.name("name_en")).sendKeys("Test Sub-Lesson English");
		driver.findElement(By.name("description_de")).sendKeys("Test Sub-Lesson Description");
		driver.findElement(By.id("btnSubmit")).click();
		
		Assert.assertEquals("Lesson added successfully",driver.findElement(By.className("alert-title")));
		
	}
	
	@Test(priority=8)
	public static void Addcontent(){
		// Add Contents as a Draft
		new WebDriverWait(driver,timeout).until(ExpectedConditions. presenceOfElementLocated(By.id("menu-toggle")));
		driver.findElement(By.id("menu-toggle")).click();
		new WebDriverWait(driver,timeout).until(ExpectedConditions. presenceOfElementLocated(By.linkText("Contents")));
		driver.findElement(By.linkText("Contents")).click();
		System.out.println("Contents page loaded successfully");
        
        
		driver.findElement(By.linkText("Add Content")).click();
		Thread.sleep(1000);
		driver.findElement(By.id("course_id")).sendKeys("Test Course German");
		driver.findElement(By.id("chapter_id")).sendKeys("Test Chapter German");
		driver.findElement(By.id("lesson_id")).sendKeys("Test Lesson German");
		Thread.sleep(250);
		driver.findElement(By.id("sub_lesson_id")).sendKeys("Test Sub-Lesson German");
						
		WebElement iframe = driver.findElement(By.className("cke_wysiwyg_frame"));
		driver.switchTo().frame(iframe);
		WebElement description = driver.findElement(By.cssSelector("body"));
		((JavascriptExecutor) driver).executeScript("arguments[0].innerHTML = 'Test Content German'", description);
		driver.switchTo().defaultContent();
				
	    driver.findElement(By.id("content_status")).sendKeys("Draft");
		driver.findElement(By.id("btnSubmit")).click();
		Thread.sleep(2000);
		
		Assert.assertEquals("Content added successfully",driver.findElement(By.className("alert-title")));
	
	}
	
	@Test(priority=9)
	public static void AddFAQ(){
		 // Add FAQ
		new WebDriverWait(driver,timeout).until(ExpectedConditions. presenceOfElementLocated(By.id("menu-toggle")));
		driver.findElement(By.id("menu-toggle")).click();
		new WebDriverWait(driver,timeout).until(ExpectedConditions. presenceOfElementLocated(By.linkText("FAQ")));
		driver.findElement(By.linkText("FAQ")).click();
		System.out.println("FAQ page loaded successfully");
			
		driver.findElement(By.linkText("Add FAQ")).click();
		Thread.sleep(1000);
			
		driver.findElement(By.name("faq_question_de")).sendKeys("Test Faq German Question");
		driver.findElement(By.name("faq_answer_de")).sendKeys("Test Faq German Answer");
		driver.findElement(By.name("faq_question_en")).sendKeys("Test Faq English Question");
		driver.findElement(By.name("faq_answer_en")).sendKeys("Test Faq English Answer");
			
		driver.findElement(By.id("btnSubmit")).click();
		
		Assert.assertEquals("FAQ added successfully",driver.findElement(By.className("alert-title")));
		
		
		
	}
	
}
	
	
